<p id="notice"><%= notice %></p>
  <div id="home-content-wrapper" class="row justify-content-center">
    <div class="col-sm-12 col-lg-10">
        <table id="index-table" class="table table-hover table-bordered">
            <thead class="thead">
              <!-- <th colspan="8"><h3 class="table-title">Invoices</h3></th> -->
              <tr class="container">
                  <%= search_form_for @q, url: invoice_search_path(@invoices) ,class: "form-inline col-md-8 col-md-offset-2", html: { method: :post } do |f| %>
                  <td colspan='8' class="input-daterange">
                    <div class="row justify-content-md-center" id="search_row">
                      <div class="col col-lg-5" id="search_date_from">
                        <div class="col-12 col-md-auto" id="from-div"><b>FROM</b></div>
                        <%= f.date_select :date_gteq, class: "form-control input-sm"%>
                      </div>
                      <div class="col col-lg-5"
                       id="search_date_to">
                       <div class="col-12 col-md-auto" id="to-div"><b>TO</b></div>
                        <%= f.date_select :date_lteq, class: "form-control input-sm" %>
                      </div>
                      <div class="col-md-2 search-btn-wrap">
                        <%= f.submit 'Search', class: "btn btn-success", id: "submit-search-date" %>
                      </div>
                    </div>
                  </td>
                  <% end %>
              </tr>
            </thead>
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Company</th>
                    <th>Contractor</th>
                    <th>Currency</th>
                    <th>Date</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @invoices.each do |invoice| %>
                <tr>
                    <td><%= invoice.amount %></td>
                    <td><%= invoice.company %></td>
                    <td><%= invoice.contractor %></td>
                    <td><%= invoice.currency %></td>
                    <td><%= invoice.date %></td>

                    <td><%= link_to 'Show', invoice, class: "btn btn-info" %></td>
                    <td><%= link_to 'Edit', edit_invoice_path(invoice), class: "btn btn-warning" %></td>
                    <td><%= link_to 'Delete', invoice, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <div class="col-md-2">
          <%= link_to 'Add New Invoice', new_invoice_path, class: "btn btn-primary" %>
        </div>
    </div>
  </div>
