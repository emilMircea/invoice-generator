<p id="notice"><%= notice %></p>

  <div id="home-content-wrapper" class="row justify-content-center">
    <div class="col-sm-12 col-lg-8">
        <table id="index-table" class="table table-hover table-bordered">
            <thead class="thead">
              <th colspan="8"><h3 class="table-title">Invoices</h3></th>
            </thead>
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Company</th>
                    <th>Contractor</th>
                    <th>Currency</th>
                    <th>Date</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @invoices.each do |invoice| %>
                <tr>
                    <td><%= invoice.amount %></td>
                    <td><%= invoice.company %></td>
                    <td><%= invoice.contractor %></td>
                    <td><%= invoice.currency %></td>
                    <td><%= invoice.date %></td>

                    <td><%= link_to 'Show', invoice, class: "btn btn-info" %></td>
                    <td><%= link_to 'Edit', edit_invoice_path(invoice), class: "btn btn-warning" %></td>
                    <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%= link_to 'New Invoice', new_invoice_path, class: "btn btn-primary" %>
    </div>
  </div>
